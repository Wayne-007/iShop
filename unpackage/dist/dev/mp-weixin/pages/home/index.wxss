.home {
  width: 750rpx;
  height: 100vh;
}
.home swiper,
.home swiper-item {
  width: 750rpx;
  height: 380rpx;
}
.home swiper .swiper-img,
.home swiper-item .swiper-img {
  width: 100%;
  height: 100%;
}
.home .nav {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
}
.home .nav .nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.home .nav .nav-item .icon-box {
  width: 120rpx;
  height: 120rpx;
  background-color: #B50E03;
  border-radius: 50%;
  text-align: center;
  line-height: 120rpx;
  margin-bottom: 6px;
}
.home .nav .nav-item .icon-box .iconfont {
  font-size: 60rpx;
  color: #fff;
}
.home .nav .nav-item .text {
  font-size: 32rpx;
}
.home .hot-goods {
  background-color: #ececec;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.home .hot-goods .title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  color: #B50E03;
  font-weight: 600;
  letter-spacing: 40rpx;
  background-color: #fff;
}
.home .hot-goods .hot-goods-list {
  width: 750rpx;
  padding: 12rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.home .hot-goods .hot-goods-list .hot-goods-item {
  width: calc(375rpx - 18rpx);
  background-color: #fff;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
  padding-bottom: 12rpx;
  box-sizing: border-box;
}
.home .hot-goods .hot-goods-list .hot-goods-item image {
  width: 100%;
  height: 320rpx;
  display: block;
}
.home .hot-goods .hot-goods-list .hot-goods-item .price-box {
  height: 48rpx;
  padding: 8rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: 600;
  color: #B50E03;
  margin-bottom: 12rpx;
}
.home .hot-goods .hot-goods-list .hot-goods-item .price-box .price-old {
  font-size: 24rpx;
  font-weight: 300;
  color: #ccc;
  font-style: oblique;
  text-decoration: line-through;
}
.home .hot-goods .hot-goods-list .hot-goods-item .goods-title {
  font-size: 28rpx;
  line-height: 32rpx;
  height: 64rpx;
  overflow: hidden;
  word-break: break-all;
  padding: 0 12rpx;
  box-sizing: border-box;
  text-overflow: ellipsis;
  /* 溢出时显示省略号 */
  display: -webkit-box;
  /* 将对象作为弹性伸缩盒子模型显示 */
  -webkit-box-orient: vertical;
  /* 设置伸缩盒子的子元素排列方式为垂直方向 */
  -webkit-line-clamp: 2;
  /* 限制显示的行数为 2 行 */
}
.home .hot-goods .list-end {
  width: 730rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
}
