.home {
  width: 750rpx;
  height: 100vh;
}
.home swiper,
.home swiper-item {
  width: 750rpx;
  height: 380rpx;
}
.home swiper .swiper-img,
.home swiper-item .swiper-img {
  width: 100%;
  height: 100%;
}
.home .nav {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
}
.home .nav .nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.home .nav .nav-item .icon-box {
  width: 120rpx;
  height: 120rpx;
  background-color: #B50E03;
  border-radius: 50%;
  text-align: center;
  line-height: 120rpx;
  margin-bottom: 6px;
}
.home .nav .nav-item .icon-box .iconfont {
  font-size: 60rpx;
  color: #fff;
}
.home .nav .nav-item .text {
  font-size: 32rpx;
}
