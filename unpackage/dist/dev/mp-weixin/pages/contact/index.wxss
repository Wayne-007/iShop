.contact {
  width: 750rpx;
}
.contact .top-img {
  display: block;
  width: 750rpx;
  height: 294rpx;
}
.contact .info-box {
  width: 750rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.contact .info-box .phone,
.contact .info-box .address {
  height: 56rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  border-bottom: 2rpx solid #ececec;
}
.contact .info-box map {
  width: 100%;
  height: 640rpx;
}
