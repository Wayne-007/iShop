.detail {
  width: 750rpx;
  background-color: #efefef;
}
.detail .swiper-box {
  width: 750rpx;
  height: 750rpx;
  border-bottom: 2rpx solid #efefef;
  background-color: #fff;
}
.detail .swiper-box .swiper-item-box {
  width: 100%;
  height: 100%;
}
.detail .swiper-box .swiper-item-box image {
  display: block;
  width: 100%;
  height: 100%;
}
.detail .price-box {
  height: 112rpx;
  background-color: #B50E03;
  padding: 12rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.detail .price-box .price-text {
  position: relative;
  font-size: 64rpx;
  font-weight: 600;
  color: gold;
  margin-left: 128rpx;
}
.detail .price-box .price-text::before {
  content: '会员价¥';
  position: absolute;
  left: -128rpx;
  bottom: 10rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.detail .price-box .price-num {
  color: #fff;
}
.detail .title {
  padding: 12rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  line-height: 1.25;
  color: #333;
  font-weight: 600;
  background-color: #fff;
  margin-bottom: 12rpx;
}
.detail .attrs {
  padding: 12rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  background-color: #fff;
  margin-bottom: 12rpx;
}
.detail .attrs .attrs-item {
  display: flex;
}
.detail .attrs .attrs-item text {
  display: block;
  width: 100%;
  border-bottom: 2rpx solid #efefef;
}
.detail .attrs .attrs-item text.name {
  font-weight: 600;
  color: #999;
}
.detail .attrs .attrs-item text.value {
  color: #666;
  text-align: right;
}
.detail .goods-carts {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
